<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemSearchLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/itemSearchImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image" />
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:flexDirection="column"
        app:justifyContent="space_between"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="8dp"
        >
        <TextView
            android:id="@+id/itemSearchTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextViewTextView TextView TextView TextView TextView TextView TextView TextView TextView"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_medium"
            android:maxLines="2"
            android:textSize="16sp"
            android:scrollHorizontally="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/itemSearchAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Angeline Rachel"
            android:textColor="@color/white"
            />
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignItems="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/view_icon"
                android:backgroundTint="@color/black"
               />
            <TextView
                android:id="@+id/itemSearchViews"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="200K"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/favorites_icon"
                android:backgroundTint="@color/black"
                android:layout_marginStart="16dp"
               />
            <TextView
                android:id="@+id/itemSearchFavorites"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="200K"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star_icon"
                android:backgroundTint="@color/black"
                android:layout_marginStart="16dp"

               />
            <TextView
                android:id="@+id/itemSearchRating"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="200K"
                android:textColor="@color/white"
                android:textSize="12sp"
                />

        </com.google.android.flexbox.FlexboxLayout>
    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>